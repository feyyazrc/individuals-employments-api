{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "description": "Individual's PAYE employments",
  "type": "object",
  "properties": {
    "_links": {
      "type": "object",
      "description": "A list of endpoint links that indicate possible actions related to the current resource.",
      "properties": {
        "self": {
          "type": "object",
          "description": "The Uniform Resource Identifier (URI) for this endpoint.",
          "properties": {
            "href": {
              "type": "string",
              "example": "/individuals/employments/paye?matchId=57072660-1df9-4aeb-b4ea-cd2d7f96e430&startDate=2019-02-28&endDate=2020-03-01"
            }
          },
          "required": [
            "href"
          ]
        }
      },
      "required": [
        "self"
      ]
    },
    "employments": {
      "description": "The list of an individualâ€™s PAYE employment data for the requested time period.",
      "type": "array",
      "minItems": 0,
      "items": {
        "type": "object",
        "properties": {
          "employer": {
            "type": "string",
            "description": "Employer details.",
            "properties": {
              "name": {
                "description": "Employer name",
                "type": "string",
                "example": "The Employer Name"
              },
              "address": {
                "type": "object",
                "description": "Employer address.",
                "properties": {
                  "line1": {
                    "type": "string",
                    "description": "Address line one."
                  },
                  "line2": {
                    "type": "string",
                    "description": "Address line two."
                  },
                  "line3": {
                    "type": "string",
                    "description": "Address line three."
                  },
                  "line4": {
                    "type": "string",
                    "description": "Address line four."
                  },
                  "line5": {
                    "type": "string",
                    "description": "Address line five."
                  },
                  "postcode": {
                    "type": "string",
                    "description": "Postcode."
                  }
                }
              },
              "payeReference": {
                "type": "string",
                "description": "Employer PAYE Reference",
                "example": "123/AI45678"
              }
            }
          },
          "employment": {
            "type": "object",
            "description": "Employment details.",
            "properties": {
              "startDate": {
                "description": "Start date in the Format YYYY-MM-DD.",
                "type": "string",
                "example": "2020-08-18"
              },
              "endDate": {
                "description": "End date in the Format YYYY-MM-DD.",
                "type": "string",
                "example": "2020-12-31"
              },
              "payFrequency": {
                "description": "A value representing the frequency of payment for an employment.",
                "type": "string",
                "example": "WEEKLY, FORTNIGHTLY, FOUR_WEEKLY, CALENDAR_MONTHLY, QUARTERLY, BI_ANNUALLY, ANNUALLY, ONE_OFF, IRREGULAR",
                "enum": [
                  "WEEKLY",
                  "FORTNIGHTLY",
                  "FOUR_WEEKLY",
                  "CALENDAR_MONTHLY",
                  "QUARTERLY",
                  "BI_ANNUALLY",
                  "ANNUALLY",
                  "ONE_OFF",
                  "IRREGULAR"
                ]
              }
            }
          }
        }
      }
    }
  },
  "required": [
    "_links",
    "employments"
  ]
}
